{% block footer %}
  <footer class="footer">
    <script type="text/javascript">
      var cur = Date.now();
    </script>
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-3" style="margin-bottom: 5px;">
          {% if theme.since and theme.since != date(cur, "YYYY") %}
            <p>CopyLeft © {{ theme.since }} - {{ date(cur, "YYYY") }} <a href="{{ theme.owner.link }}" target="_blank">{{ theme.owner.name }}</a></p>
          {% else %}
            <p>CopyLeft © {{ date(cur, "YYYY") }} <a href="{{ theme.owner.link }}" target="_blank">{{ theme.owner.name }}</a>.</p>
          {% endif %}
          <p>由 Hexo 强力推进</p>
          <p>使用 mirror 作为镜像管理器</p>
          {% if theme.icp_record %}
            <p>{{ theme.icp_record }}</p>
          {% endif %}
        </div>
        <div class="col-lg-5 col-md-5" style="margin-bottom: 5px;">
          {% if theme.info %}
            {{ theme.info }}
          {% endif %}
        </div>
        <div class="col-lg-4 col-md-4" style="margin-bottom: 5px;">
          {% if theme.footer_logo %}
            <img class="img-responsive" height=110px width=110px src="{{ theme.footer_logo }}">
          {% endif %}
        </div>
      </div>
    </div>
  </footer>
{% endblock %}
